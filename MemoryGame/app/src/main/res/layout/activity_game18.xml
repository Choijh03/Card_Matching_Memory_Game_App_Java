<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_ground13"
    tools:context=".Game6_Activity">

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/play_btn"
        android:layout_toLeftOf="@+id/pause_btn"
        android:drawableLeft="@drawable/ic_baseline_play_circle_outline_24" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/pause_btn"
        android:layout_alignParentRight="true"
        android:drawableLeft="@drawable/ic_baseline_pause_circle_outline_24" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: 0"
        android:textStyle="bold"
        android:textSize="25dp"
        android:id="@+id/score_edit"
        android:textColor="@color/black"
        android:padding="10dp" />

    <Button
        android:id="@+id/tryAgain_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Try Again"
        android:layout_marginLeft="50dp"
        android:layout_above="@+id/newGame_btn"/>

    <Button
        android:id="@+id/newGame_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="50dp"
        android:text="New Game"
        />

    <Button
        android:id="@+id/endGame_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp"
        android:layout_alignParentRight="true"
        android:text="End Game"
        android:layout_marginRight="40dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/game_button_layout"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/btn0"
                android:textStyle="bold"
                android:textSize="18dp"
                android:padding="10dp"
                android:src="@drawable/ic_back"/>
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/btn1"
                android:src="@drawable/ic_back"
                android:textStyle="bold"
                android:textSize="18dp"
                android:padding="10dp" />
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/btn2"
                android:src="@drawable/ic_back"
                android:textStyle="bold"
                android:textSize="18dp"
                android:padding="10dp" />
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/btn3"
                android:src="@drawable/ic_back"
                android:textStyle="bold"
                android:textSize="18dp"
                android:tag="3"
                android:padding="10dp" />
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/btn4"
                android:src="@drawable/ic_back"
                android:textStyle="bold"
                android:textSize="18dp"
                android:padding="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/btn5"
                android:src="@drawable/ic_back"
                android:textStyle="bold"
                android:textSize="18dp"
                android:padding="10dp" />
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/btn6"
                android:src="@drawable/ic_back"
                android:textStyle="bold"
                android:textSize="18dp"
                android:padding="10dp" />
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/btn7"
                android:src="@drawable/ic_back"
                android:textStyle="bold"
                android:textSize="18dp"
                android:padding="10dp" />
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/btn8"
                android:src="@drawable/ic_back"
                android:textStyle="bold"
                android:textSize="18dp"
                android:padding="10dp" />
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/btn9"
                android:src="@drawable/ic_back"
                android:textStyle="bold"
                android:textSize="18dp"
                android:padding="10dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/btn10"
                android:src="@drawable/ic_back"
                android:textStyle="bold"
                android:textSize="18dp"
                android:padding="10dp" />
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/btn11"
                android:src="@drawable/ic_back"
                android:textStyle="bold"
                android:textSize="18dp"
                android:padding="10dp" />
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/btn12"
                android:src="@drawable/ic_back"
                android:textStyle="bold"
                android:textSize="18dp"
                android:padding="10dp" />
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/btn13"
                android:src="@drawable/ic_back"
                android:textStyle="bold"
                android:textSize="18dp"
                android:padding="10dp" />
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/btn14"
                android:src="@drawable/ic_back"
                android:textStyle="bold"
                android:textSize="18dp"
                android:padding="10dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:id="@+id/btn15"
                android:src="@drawable/ic_back"
                android:textStyle="bold"
                android:textSize="18dp"
                android:padding="10dp" />
            <ImageView
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:id="@+id/btn16"
                android:src="@drawable/ic_back"
                android:textStyle="bold"
                android:textSize="18dp"
                android:padding="10dp" />
            <ImageView
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:id="@+id/btn17"
                android:src="@drawable/ic_back"
                android:textStyle="bold"
                android:textSize="18dp"
                android:padding="10dp" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>